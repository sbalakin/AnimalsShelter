<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrepeat"
    tools:context=".GetListAnimals"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:maxLength="50"
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="кличка животного"
                android:id="@+id/editTextSearch2"
                android:textColorHint="#15111111" />

            <ImageButton
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/search"
                android:id="@+id/imageButton" />
        </LinearLayout>

        <LinearLayout
            android:gravity="end|center"
            android:layout_gravity="end|center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Просмотр по Карте"
                android:id="@+id/textView27" />

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/map"
                android:id="@+id/imageButtonLostAnimalsMap" />
        </LinearLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/gridView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:columnWidth="150dp"

        android:background="@drawable/backgroundrepeat"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="-5dp"
        android:focusable="true"
        android:clickable="true" />


</LinearLayout>
